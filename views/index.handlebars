<div class="container-fluid">
    <div class="row"> {{!Row for the body}}
        <div class="col-lg-5"> {{!This column is for the image}}
            <img src="https://static.vecteezy.com/system/resources/previews/000/147/310/non_2x/free-hand-drawn-vector-burger-illustration.jpg" alt="burger"
            class=" imgBurger float-right">
        </div>
        <div class="col-lg-7"> {{!This column is for the form and list items}}
            <div class="row"> {{! Row for the banner and form }}
                <div class="row banner">                            
                    <h4 class="centered">Place your Order</h4>                    
                    
                </div>

                {{!-- This section contains the form --}}
                <form class=" row create-form">
                    <div class="form-group col-lg-5">
                        <label for="name" class="text-white">Burger Name</label>
                        <input type="text" id="name" name="name">
                    </div>
                    <div class="col-lg-2">
                        <button id ="btnSubmit" class="btn btn-sm" type="submit">Add Burger</button>
                    </div>
                                        
                </form> 
                    

            </div>

            {{!-- This section is to list burgers --}}
            <div class="row">
                {{!-- section for bugers added but not devoured --}}
                <div class="col-lg-6 burgersRow">
                    <div class="row">
                        <h5 class = "heading5">Ready to Eat</h5>
                    </div>

                    <div class="row">
                        <ul class = "tagList">
                            {{#each burgers}}
                                {{#unless devoured}}
                                   <li class="text-white burgerList">
                                       {{burger_name}} 
                                       <button class=" btnDevour btn btn-white btn-sm" data-id="{{id}}">Devour It</button>     
                                   </li>
                                    
                                {{/unless}}
                            {{/each}}        
                        </ul>
                    </div>
                </div>

                {{!-- This section is for devoured burgers --}}
                <div class="col-lg-6 burgersRow">  
                    <div class="row">
                        <h5 class = "heading5">Devoured!!!</h5>                    
                    </div>    
                    
                    <div class="row">
                        <ul class = "tagList">
                            {{#each burgers}}
                                {{#if devoured}}
                                   <li class="text-white burgerList">
                                       {{burger_name}} 
                                       <button class=" btnDelete btn btn-white btn-sm" data-id="{{id}}">Delete</button>     
                                   </li>
                                    
                                {{/if}}
                            {{/each}}        
                        </ul>
                    </div>

                </div>

            </div>
        </div>
    </div>
   
</div>